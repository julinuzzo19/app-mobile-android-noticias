<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/category_language">

        <ListPreference
            app:defaultValue="es"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="@string/preference_language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

<PreferenceCategory app:title="@string/category_notifications">

    <CheckBoxPreference app:title="@string/preference_notifications"
        app:key="notifications"
        app:defaultValue="true"
        />


</PreferenceCategory>



</PreferenceScreen>