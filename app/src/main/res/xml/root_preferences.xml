<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Idioma">

        <ListPreference
            app:defaultValue="Español"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="Seleccione un idioma"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Sesion">

        <Preference
            app:title="Cerrar Sesión"
            app:key="buttonLogout"
            app:summary="Seleccione para finalizar su sesión"
            />

    </PreferenceCategory>



</PreferenceScreen>